@model IEnumerable<ProjectTeamManager.Model.DAL.Employee>

@{
    ViewBag.Title = "List Employee";
}

<div class="card">
    <div class="card-header">
        <h5 class="mt-2 float-left">
            <button class="btn btn-link">
                <i class="fas fa-book-reader mr-2"></i> Employee
            </button>
        </h5>
        @using (Html.BeginForm())
        {
            <p class="mt-2 row float-right">
                @Html.TextBox("search", null, htmlAttributes: new { @class = "form-control col-md-4 ml-3", @placeholder = "Search name" })
                @Html.TextBox("phone", null, htmlAttributes: new { @class = "form-control col-md-4 ml-3", @placeholder = "Search phone number" })
                <input type="submit" value="Search" class="btn btn-primary ml-3" />
            </p>
        }
    </div>
    <div class="card-body">
        <p>
            <a class="create-link btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Create"  href="@Url.Action("Create")">Create</a>
        </p>
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Skills)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Skills)
                    </td>
                    <td class="text-center">
                        <a class="edit-link" data-toggle="tooltip" data-placement="bottom" title="Edit" href="@Url.Action("Edit", "Employees", new { id = item.Id })"><i class="fas fa-edit text-success"> | </i></a>
                        <a class="delete-link" data-toggle="tooltip" data-placement="bottom" title="Delete" href="@Url.Action("Delete", "Employees", new { id = item.Id })"><i class="fas fa-trash-alt text-danger"></i></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
