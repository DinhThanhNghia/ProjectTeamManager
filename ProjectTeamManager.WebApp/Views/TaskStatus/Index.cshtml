@model IEnumerable<ProjectTeamManager.Model.DAL.TaskStatu>

@{
    ViewBag.Title = "Task Status";
}

<div class="card">
    <div class="card-header">
        <h5 class="mt-2 float-left">
            <button class="btn btn-link">
                <i class="fas fa-book-reader mr-2"></i> Task Status
            </button>
        </h5>
        @using (Html.BeginForm())
        {
            <p class="float-right mt-2 row">
                @Html.TextBox("search", null, htmlAttributes: new { @class = "form-control col-md-8", @placeholder = "Search status" })
                <input type="submit" value="Search" class="btn btn-primary ml-3" />
            </p>
        }
    </div>
    <div class="card-body">
        <p>
            <a class="create-link btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Create" href="@Url.Action("Create")">Create</a>
        </p>
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="text-center">
                        <a class="edit-link" data-toggle="tooltip" data-placement="bottom" title="Edit" href="@Url.Action("Edit", "TaskStatus", new { id = item.Id })"><i class="fas fa-edit text-success"> | </i></a>
                        <a class="delete-link" data-toggle="tooltip" data-placement="bottom" title="Delete" href="@Url.Action("Delete", "TaskStatus", new { id = item.Id })"><i class="fas fa-trash-alt text-danger"></i></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

