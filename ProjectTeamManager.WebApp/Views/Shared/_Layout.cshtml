<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title GroupOne-PTM</title>
    <link href="~/logo.png" rel="shortcut icon" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <a class="navbar-brand" href="@Url.Action("Index","Home")">GroupOne</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index","ManagerComments")">Manager Comment</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Employees")">Employee</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Projects")">Project</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","UserStories")">User Story</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","ProjectTasks")">Project Task</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","TaskStatus")">Task Status</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="navbar fixed-bottom bg-success justify-content-center">
        <p>&copy; @DateTime.Now.Year - ASP.NET Group One</p>
    </footer>
    <script type="text/javascript">
        $(document).ready(function () {
            var url = window.location.pathname;
            var substr = url.split('/');
            var urlaspx = substr[substr.length - 1];
            $('.navbar').find('.active').removeClass('active');
            $('.navbar ul li a').each(function () {
                if (this.href.indexOf(urlaspx) >= 0) {
                    $(this).parent().addClass('active');
                }
            });
        });
    </script>
    <script src="~/Scripts/modal-dialog.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
