@model IEnumerable<ProjectTeamManager.Model.DAL.UserStory>

<div class="card">
    <div class="card-header">
        <h5 class="mt-2 float-left">
            <button class="btn btn-link">
                <i class="fas fa-book-reader mr-2"></i> User Story
            </button>
        </h5>
        @using (Html.BeginForm())
        {
            <p class="float-right row mt-2">
                @Html.TextBox("Search", null, htmlAttributes: new { @class = "form-control col-md-4 ml-3", @placeholder = "Search story" })
                @Html.DropDownList("ProjectId", (IEnumerable<SelectListItem>)ViewBag.ProjectId, "Choose Project", htmlAttributes: new { @class = "form-control col-md-4 ml-3" })
                <input class="btn btn-primary ml-3" type="submit" value="Search" />
            </p>
        }
    </div>
    <div class="card-body">
        <p>
            <a class="create-link btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Create" href="@Url.Action("Create")">Create</a>
        </p>
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Project.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Story)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Story)
                    </td>
                    <td class="text-center">
                        <a class="edit-link" data-toggle="tooltip" data-placement="bottom" title="Edit" href="@Url.Action("Edit", "UserStories", new { id = item.Id })"><i class="fas fa-edit text-success"> | </i></a>
                        <a class="delete-link" data-toggle="tooltip" data-placement="bottom" title="Delete" href="@Url.Action("Delete", "UserStories", new { id = item.Id })"><i class="fas fa-trash-alt text-danger"></i></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
