@model IEnumerable<ProjectTeamManager.Model.DAL.ManagerComment>

@{
    ViewBag.Title = "List Manager Comment";
}

<div class="card">
    <div class="card-header">
        <h5 class="mt-2 float-left">
            <button class="btn btn-link">
                <i class="fas fa-book-reader mr-2"></i> Manager Comment
            </button>
        </h5>
        @using (Html.BeginForm())
        {
            <p class="float-right mt-2 row">
                @Html.TextBox("search", null, htmlAttributes: new { @class = "form-control col-md-4 ml-3", @placeholder = "Search manager name" })
                @Html.DropDownList("ProjectId", null, "Choose project", htmlAttributes: new { @class = "form-control  col-md-4 ml-3" })
                <input type="submit" value="Search" class="btn btn-primary ml-3" />
            </p>
        }
    </div>
    <div class="card-body">
        <p>
            <a class="create-link btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Create" href="@Url.Action("Create")">Create</a>
        </p>
        <table class="table table-striped table-bordered table-hover">
            <tr class="header">
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectTask.Employee.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectTask.UserStory.Project.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectTask.TaskStatu.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comments)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectTask.Employee.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectTask.UserStory.Project.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectTask.TaskStatu.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>
                    <td class="text-center">
                        <a class="edit-link" data-toggle="tooltip" data-placement="bottom" title="Edit" href="@Url.Action("Edit", "ManagerComments", new { id = item.Id })"><i class="fas fa-edit text-success"> | </i></a>
                        <a class="delete-link" data-toggle="tooltip" data-placement="bottom" title="Delete" href="@Url.Action("Delete", "ManagerComments", new { id = item.Id })"><i class="fas fa-trash-alt text-danger"></i></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>